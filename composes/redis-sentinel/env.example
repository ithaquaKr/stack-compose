# shellcheck disable=SC2034
# Redis Configuration
#
REDIS_IMAGE=bitnami/redis:6.0.13
REDIS_PORT=6379
REDIS_REPLICA_START_PORT=6380
REDIS_REPLICA_END_PORT=6399
REDIS_REPLICA_COUNT=2

# Sentinel Configuration
SENTINEL_IMAGE=bitnami/redis-sentinel:6.0.13
SENTINEL_PORT=26379
SENTINEL_QUORUM=2
SENTINEL_COUNT=3
SENTINEL_START_PORT=26379
SENTINEL_END_PORT=26381

# Redis Master Configuration
REDIS_MASTER_HOST=redis-master

# Monitoring Configuration
SENTINEL_DOWN_AFTER=5000
SENTINEL_FAILOVER_TIMEOUT=60000
SENTINEL_PARALLEL_SYNCS=1

# Enable/Disable Services
ENABLE_REDIS_EXPORTER=true
ENABLE_SENTINEL_EXPORTER=true
ENABLE_FLUENTD=true
ENABLE_LOGROTATE=true

# Redis Exporter Configuration
REDIS_EXPORTER_IMAGE=oliver006/redis_exporter:v1.67.0
REDIS_EXPORTER_PORT=9121

# Sentinel Exporter Configuration
SENTINEL_EXPORTER_IMAGE=leominov/redis_sentinel_exporter:1.9.0
SENTINEL_EXPORTER_PORT=9355

# Fluentd Configuration
FLUENTD_IMAGE=fluent/fluentd:v1.16-1
FLUENTD_PORT=24224
FLUENTD_FORWARD_PORT=24224
FLUENTD_HTTP_PORT=9880

# Log Configuration
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
